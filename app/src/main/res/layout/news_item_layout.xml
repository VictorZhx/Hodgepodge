<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <!--标题-->
    <TextView
        android:id="@+id/sight_news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sight_news_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_burst_mode_black_18dp"
        app:layout_constraintEnd_toStartOf="@+id/sight_news_icon2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sight_news_title" />

    <ImageView
        android:id="@+id/sight_news_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_burst_mode_black_18dp"
        app:layout_constraintEnd_toStartOf="@+id/sight_news_icon3"
        app:layout_constraintStart_toEndOf="@+id/sight_news_icon1"
        app:layout_constraintTop_toTopOf="@id/sight_news_icon1" />

    <ImageView
        android:id="@+id/sight_news_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_burst_mode_black_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sight_news_icon2"
        app:layout_constraintTop_toTopOf="@id/sight_news_icon1" />

    <TextView
        android:id="@+id/sight_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/sight_news_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="author"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sight_news_time" />

</android.support.constraint.ConstraintLayout>